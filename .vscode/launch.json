{
	//  Debug Bot through VS Code
	"version": "0.2.0",
	"configurations": [{
			"type": "node",
			"request": "launch",
			"name": "Build and Run",
			"program": "${workspaceFolder}\\src\\igniter.ts",
			"preLaunchTask": "Build - Stable",
			"showAsyncStacks": true,
			"outFiles": [
				"${workspaceFolder}/built/**/*.js"
			],
		}, {
			"type": "node",
			"request": "launch",
			"name": "Build and Run - DEV MODE",
			"program": "${workspaceFolder}\\src\\igniter.ts",
			"preLaunchTask": "Build - Dev",
			"showAsyncStacks": true,
			"args": ["dev-mode"],
			"outFiles": [
				"${workspaceFolder}/built_dev/**/*.js"
			],
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Fallback Build (Discord Matey Bot)",
			"program": "${workspaceFolder}\\src\\igniter.ts",
			"outFiles": [
				"${workspaceFolder}/built_fallback/**/*.js"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Opened Test",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"--no-timeouts",
				"--colors",
				"${file}",
				"--require",
				"ts-node/register"
			],
			"console": "integratedTerminal",
			"sourceMaps": true,
		}
	]
}