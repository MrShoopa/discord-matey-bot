{
	//  Debug Bot through VS Code
	"version": "0.2.0",
	"configurations": [{
			"type": "node",
			"request": "launch",
			"name": "Build and Run (Discord Matey Bot)",
			"program": "${workspaceFolder}\\src\\igniter.ts",
			"preLaunchTask": "tsc: build - tsconfig.json",
			"showAsyncStacks": true,
			"outFiles": [
				"${workspaceFolder}/built/**/*.js"
			],
			"restart": true,
			"postDebugTask": "Create fallback build"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Fallback Build (Discord Matey Bot)",
			"program": "${workspaceFolder}\\src\\igniter.ts",
			"outFiles": [
				"${workspaceFolder}/built_fallback/**/*.js"
			]
		},
	]
}