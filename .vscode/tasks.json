{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "label": "Build - Stable",
            "detail": "Create a new build of the project as is.",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "Build - Dev (Watch)",
            "detail": "Create a new build of the project as is, with a stricter hotword for testing.",
            "type": "shell",
            "isBackground": true,
            "command": "tsc-watch --outDir ./built_dev",
            "problemMatcher": [{
                "owner": "typescript",
                "fileLocation": "relative",
                "pattern": [{
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting incremental compilation...",
                    "endsPattern": "Watching for file changes.",
                }
            }],
            "group": "build"
        },
        {
            "label": "Create fallback build",
            "detail": "Duplicate the current built bot project into a fallback folder",
            "type": "shell",
            "command": "Copy-item -Force -Recurse \"${workspaceFolder}\\built\\*\" -Destination \"${workspaceFolder}\\built_fallback\"",
            "args": []
        },
        {
            "label": "Create Deployable Build",
            "detail": "Create a deployable build",
            "type": "shell",
            "command": "Copy-item -Force -Path (Get-Item -Path \"${workspaceFolder}\\*\" -Exclude ('.vscode','built', 'built_dev', 'cache', 'logs', 'node_modules', 'save_data', '~deploy')).FullName -Destination \"${workspaceFolder}\\~deploy\\app\\ -Container -Recurse",
            "args": []
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build"
        }
    ]
}