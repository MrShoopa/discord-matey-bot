{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/@types",
                "./src/types/*"
            ]
        },
        "rootDir": "src",
        "typeRoots": [
            "../"
        ],
        "types": [],
        "outDir": "./built",

        "module": "ESNext",
        "target": "ES2020",

        "allowJs": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,

        "experimentalDecorators": true,
        "diagnostics": true
    },
    "include": [
        "./src/**/*"
    ]
}