{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/@types",
                "src/ts/*"
            ]
        },
        "typeRoots": [
            "../"
        ],
        "types": [],
        "outDir": "./built",

        "module": "commonjs",
        "target": "es2018",

        "allowJs": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,

        "experimentalDecorators": true,
        "diagnostics": true
    },
    "include": [
        "src/**/*"
    ]
}