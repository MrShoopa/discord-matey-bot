{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/@types",
                "src/ts/*",
                "types/*"
            ]
        },
        "outDir": "./built",

        "lib": ["es2017", "dom"],
        "module": "commonjs",
        "target": "es6",

        "allowJs": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ]
}