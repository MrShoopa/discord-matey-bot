{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["types/*"]
        },
        "outDir": "./built",

        "lib": ["es2017", "dom"],
        "module": "commonjs",
        "target": "es6",

        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ]
}